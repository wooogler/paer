{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm build && echo 'Build completed' && ls -la client/dist && ls -la client/dist/assets && ls -la server/dist/public"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "NODE_ENV=production RAILWAY_ENVIRONMENT=true PORT=$PORT node server/dist/server/src/index.js",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
