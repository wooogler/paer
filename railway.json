{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pnpm install && pnpm build && ls -la server/dist/public && ls -la server/dist/server/src"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "NODE_ENV=production RAILWAY_ENVIRONMENT=true node server/dist/server/src/index.js",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
